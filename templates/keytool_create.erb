<%
# Set variables
pki-cn = "Unknown"
pki-o = "Unknown"
pki-l = "Unknown"
pki-s = "Unknown"
pki-c = "Unknown"
-%>
/bin/echo | /usr/bin/keytool -genkey -alias whocares -keystore <%= @actual_truststore %> -storepass <%= @truststore_pass %> -dname CN=<%= pki-cn %>, OU=<%= pki-ou %>, O=<%= pki-o %>, L=<%= pki-l %>, S=<%= pki-s %>, C=<%= pki-c %>" > /dev/null
/usr/bin/keytool -delete -alias whocares -keystore <%= @actual_truststore %> -storepass "<%= @truststore_pass %>"
